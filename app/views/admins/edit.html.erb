<div class="container">
	<h2>投稿編集画面</h2>
	<%= form_with(model:@post, url: admin_path , local: true, multipart: true) do |form| %>
	<% if @post.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@post.errors.count, "error") %> prohibaited this post from being saved:</h2>
		<ul>
			<% @post.errors.full_messages.each do |message| %>
			<li>
				<%= message %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="form-group">
		<div class="field">
			<%= form.label :title %>
			<%= form.text_field :title, id: :post_title, :class=>"form-control" %>
		</div>

		<div class="field mb-2">
			<%= form.label :image %>
			<%= form.file_field :image, id: :image_title, :class=>"form-control-file" %>
		</div>

		<div class="field">
			<%= form.label :content %>
			<%= form.text_area :content, id: :content, :rows=>"3",  :class=>"form-control" %>
		</div>

		<div class="actions mt-2">
			<%= form.submit :class=>"btn btn-primary" %>
		</div>


	</div>
	<% end %>
</div>