<div class="container">
  <h2><%= @category.title %>の記事一覧</h2>
  <div class="comment  mb-1">
          <table class="table">
              <tr>
                <th scope="col">Title</th>
                <th>content</th>
              </tr>
            <% @posts.each do |post| %>
              <tr>
                <td scope="row">
                  <%= post.title %>
                </td>
                <td>
                  <%= post.content %>
                </td>
              </tr>
            <% end %>

          </table>  
    </div>



</div>